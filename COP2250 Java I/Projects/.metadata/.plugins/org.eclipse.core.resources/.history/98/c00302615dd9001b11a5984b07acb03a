package izlar10;
import java.util.Scanner;

public class SecurityCodePattern {

	public static void main(String[] args) {
		
		// new scanner object
		Scanner input = new Scanner(System.in);
		
		//prompt for user
		System.out.println("Enter the code pattern");
		
		//gathering user input
		String code = input.next();
		
		char[] chars = code.toCharArray();
		
		if (!Character.isUpperCase(chars[0])) {
			System.out.println("Code pattern incorrect.");
		}
		else if (!Character.isLowerCase(chars[1])) {
			System.out.println("Code pattern incorrect.");
		}
		else if (!Character.isUpperCase(chars[2])) {
			System.out.println("Code pattern incorrect.");
		}
		else if (!Character.isLowerCase(chars[3])) {
			System.out.println("Code pattern incorrect.");
		}
	}

}
